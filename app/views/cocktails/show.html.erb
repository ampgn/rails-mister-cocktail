<h2><%=@cocktail.name%></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li style="list-style: none">
    <p><%=@dose.ingredient.name %> : <%= @dose.description%></p>
  </li>
  <% end %>
</ul>

<%= simple_form_for ([@cocktail, @dose]) do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Back to all cocktail", cocktails_path %>
